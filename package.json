{
  "name": "grandm-launcher",
  "version": "0.1.0",
  "description": "GrandM Launcher (FiveM-style)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist:portable": "electron-builder --win portable --x64"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.grandm.launcher",
    "productName": "GrandM Launcher",
    "copyright": "GrandM Studios",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    }
  }
}